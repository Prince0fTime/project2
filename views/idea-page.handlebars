<div id="home"></div>
{{> ideas/header}}

<div id="idea" class="card border-dark mb-3 col-12" style="margin-top:30px">
    
    <div class="card-body text-dark">
        
        <h2 data-id="{{projects.id}}"class="idea-title">{{projects.name}}</h2>
        <p class="idea-description">{{projects.description}}</p>
    </div>
    </div>

    <div class="form-group">
        <label for="comment-form">New Comment</label>
        <input type="email" id="comment-email" placeholder="Email Address"></input>
        <textarea class="form-control" id="comment-form" rows="5"></textarea>
        <button class="btn btn-primary" for="comment-form" style="margin-top:15px">Submit</button>
    </div>

    <div class="comment-section">
    <ul>
        <li>Comment here</li>
        <li>Another comment here</li>
    </ul>

    </div>

</div>