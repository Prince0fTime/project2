<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{pageTitle}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="new-idea-name">Example Text</label>
            <input type="text" id="new-idea-name" class="form-control" aria-describedby="new-idea-name" placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="new-idea-description">Example Description</label>
            <textarea class="form-control" id="new-idea-description" aria-describedby="new-idea-description" placeholder="Enter Example Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Examples:</h3>
        <ul id="idea-list" class="list-group">
          {{#each projects}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="/project/{{this.id}}">{{this.name}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
